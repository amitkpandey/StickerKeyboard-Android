<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_ll"
    tools:context="keyboard.android.psyphertxt.com.stickers.StickerActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sticker_grid_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/admob_frame"
        android:adjustViewBounds="true"
        android:scrollbars="vertical" />

    <LinearLayout
        android:id="@+id/admob_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:background="#ddd" />

</RelativeLayout>
